{# src/KK/BlogBundle/Resources/views/Page/sidebar.html.twig #}

<section class="section">
    <header>
        <h3>Tag Cloud</h3>
    </header>
    <p class="tags">
        {% for tag, weight in tags %}
            <span class="weight-{{ weight }}"><a href="{{ path('kk_blog_tags', {'tag': tag }) }}">{{ tag }}</a></span>
        {% else %}
            <p>There are no tags</p>
        {% endfor %}
    </p>
</section>